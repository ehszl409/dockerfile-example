pipeline {
    agent any
    triggers{
        githubPush()
    }
    options{
        timestamps()
    } 
    stages{
        stage('Github Clone & Checkout'){
            steps{
                git branch: 'main', url: 'https://github.com/ehszl409/dockerfile-example.git'
                    // credentialsId: 'github-MZ_jenkins_cicd'
            }
        }
        stage('httpd Build'){
            steps{
                script{
                    // Docker hub 에 로그인 하기 위해 사용
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub') {
                        // Dockerfile 로 이미지 생성 
                        // docker.build("태그명", "Dockerfile 경로") docker pipeline 설치 후 사용 가능
                        docker.build('ehszl409/jenkins-test-httpd', './ubuntu_apache2/', '--no-cache')    
                    }
                }
            }
        }
        stage('nginx Build'){
            steps{
                script{
                    // Docker hub 에 로그인 하기 위해 사용
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub') {
                        // Dockerfile 로 이미지 생성 
                        // docker.build("태그명", "Dockerfile 경로") docker pipeline 설치 후 사용 가능
                        docker.build('ehszl409/jenkins-test-nginx', './ubuntu_nginx/', '--no-cache')    
                    }
                }
            }
        }
        stage('nginxLB Build'){
            steps{
                script{
                    // Docker hub 에 로그인 하기 위해 사용
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub') {
                        // Dockerfile 로 이미지 생성 
                        // docker.build("태그명", "Dockerfile 경로") docker pipeline 설치 후 사용 가능
                        docker.build('ehszl409/jenkins-test-nginxlb', './ubuntu_nginx_loadbalancer/', '--no-cache')    
                    }
                }
            }
        }
        stage('Docker Images Push'){
            steps{
                script{
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub'){
                        def imghttpd = docker.image('ehszl409/jenkins-test-httpd')
                        def imgnginx = docker.image('ehszl409/jenkins-test-nginx')
                        def imgnginxlb = docker.image('ehszl409/jenkins-test-nginxlb')
      
                        imghttpd.push('0.3')
                        imgnginx.push('0.3')
                        imgnginxlb.push('0.3')
                        imghttpd.push('latest')
                        imgnginx.push('latest')
                        imgnginxlb.push('latest')
                    }
                }
            }
        }
    }
    post{
        cleanup{
            emailext subject: 'DEFAULT_SUBJECT',
                     to: 'cles2459@gmail.com',
                     body: 'DEFAULT_CONTENT'
            cleanWs() // 작업영역 삭제
        }
    }
}